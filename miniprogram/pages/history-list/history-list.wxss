/* miniprogram/pages/history-list/history-list.wxss */
.history-container {
  padding: 12px 16px 0;
}

.history-list {
  position: relative;
  display: flex;
  align-items: center;
  padding: 12px;
  margin-bottom: 10px;
  background-color: #ffffff;
  border-bottom-right-radius: 10px;
  border-bottom-left-radius: 10px;
}

.list-image {
  width: 70px;
  height: 74px;
}

.right-module {
  flex: 1;
  padding-left: 10px;
}

.list-title {
  padding-bottom: 5px;
  font-size: 28rpx;
  color: #424242;
}

.list-time {
  padding-bottom: 5px;
  font-size: 22rpx;
  color: #424242;
}

.list-price {
  padding-bottom: 0;
}

.delete {
  position: absolute;
  right: 12px;
  top: 12px;
  width: 50px;
  text-align: right;
  font-size: 28rpx;
  color: #B52E24;
}

.again-button {
  position: absolute;
  bottom: 12px;
  right: 12px;
  width: 70px;
  height: 22px;
  line-height: 20px;
  text-align: center;
  font-size: 20rpx;
  color: #000000;
  border: 1rpx solid rgba(0, 0, 0, 0.09);
  border-radius: 14px;
}

.no-list-container {
  padding-top: 54px;
}
.no-image-box {
  width: 182px;
  margin: 0 auto 30px;
}
.no-image {
  width: 100%;
  height: 206px;
}

.no-text {
  text-align: center;
  font-size: 40rpx;
  color: #BDBBBB;
}