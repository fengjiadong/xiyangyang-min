/* miniprogram/pages/home-page/home-page.wxss */
.home-image-box {
  padding: 0 16px;
}

.swiper-bottom {
  margin-bottom: 50px;
}

.swiper-item {
  width:100%;
  height: 150px;
}

.type-choose-box {
  display: flex;
  justify-content: space-between;
  padding-top: 48px;
  padding-bottom: 32px;
  margin-bottom: 50px;
  background-color: #ffffff;
}

.type-choose-list {
  width: 50%;
  text-align: center;
}

.type-back {
  width: 80px;
  height: 80px;
  margin: 0 auto;
  /* line-height: 80px; */
  border-radius: 50%;
  /* background-color: #04ADEF; */
}

.icon-kafei,
.icon-cycleqiche {
  font-size: 36px;
  color: #ffffff;
}

.icon-cycleqiche {
  line-height: 88px;
}

.type-title {
  padding-top: 10px;
  font-size: 20px;
  color: #1F0606;
  font-weight: bold;
}

.type-text {
  font-size: 10px;
  color: #7E7B7B;
}

.button {
  width: 282px;
  height: 44px;
  margin: 0 auto;
  line-height: 44px;
  text-align: center;
  color: #ffffff;
  font-size: 20px;
  background-color: #04ADEF;
  border-radius: 20px;
}