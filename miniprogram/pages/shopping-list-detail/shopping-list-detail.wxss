/* miniprogram/pages/shopping-list-detail/shopping-list-detail.wxss */
.detail-container {
  padding: 14px 16px 0;
}
.write-module-box {
  padding: 10px 14px;
  margin-bottom: 10px;
  background-color: #ffffff;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.store-name {
  padding-bottom: 10px;
  font-size: 32rpx;
  color: #1F0606;
}
.list-every, .detail-list-box {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}
.list-image {
  width: 70px;
  height: 74px;
}
.right-box {
  flex: 1;
  position: relative;
  padding-left: 10px;
}
.list-name {
  padding-bottom: 5px;
  font-size: 28rpx;
  color: #424242;
}
.text-before {
  padding-bottom: 5px;
  font-size: 24rpx;
  color: #7B7B7B;
}
.text-words {
  font-size: 24rpx;
  color: #000000;
}
.list-price {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 24rpx;
  color: #424242;
}
.price-num {
  font-size: 44rpx;
}
.total-price {
  text-align: right;
  font-size: 44rpx;
  color: #FF0000;
}
.detail-title {
  font-size: 28rpx;
  color: #7B7B7B;
}
.detail-text {
  flex: 1;
  padding-left: 16px;
  text-align: right;
  font-size: 24rpx;
  color: #424242;
}